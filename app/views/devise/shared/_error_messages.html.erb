<% if resource.errors.any? %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
          <div class="alert alert-danger" role="alert" style="position:absolute">
            
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          
      </div>
   </div>
  </div>
<% end %>
